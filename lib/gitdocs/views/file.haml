%h1= root

- if parent
  %a{ :href => parent.empty? ? "/#{idx}" : "/#{idx}#{parent}", :class => "parent" }
    &#8618;
    = parent.empty? ? '/' : parent
- else
  %a{ :href => "/", :class => "parent" }
    &#8618; Back to selection

%h2
  = request.path_info.empty? ? '/' : request.path_info
  %a{ :href => "?mode=raw" }
    (raw)
  %a{ :href => "?mode=edit" }
    (edit)
  %a{ :href => "?mode=delete", :onclick => "confirm('Are you sure?')" }
    (delete)

.contents
  = preserve contents

